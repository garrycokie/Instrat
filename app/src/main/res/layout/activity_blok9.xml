<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartfren.instrat.activities.Blok9Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBlok9Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="BLOK 9 : KATEGORI TOKO"
                android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/lblQ128"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_blok9_q128_text"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/spQ128A"
            android:layout_below="@+id/lblQ128"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/page_blok9_kategoritoko_list"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>

</ScrollView>
<include layout="@layout/bottom_step_button_layout"/>
    </RelativeLayout>
