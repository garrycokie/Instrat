<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartfren.instrat.activities.Blok9Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtBlok9Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:text="BLOK 9 : KATEGORI TOKO"
                android:layout_centerHorizontal="true"/>

        <TextView
            style="@style/LabelQuestion"
            android:id="@+id/lblQ128"
            android:text="@string/page_blok9_q128_text"/>
        <Spinner
            style="@style/Answer"
            android:id="@+id/spQ128A"/>
            <TextView
                style="@style/LabelError"
                android:id="@+id/errorQ128A"/>
    </LinearLayout>

</ScrollView>
<include layout="@layout/bottom_step_button_layout"/>
    </RelativeLayout>
