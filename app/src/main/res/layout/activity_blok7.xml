<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartfren.instrat.activities.Blok7Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtBlock7Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:text="BLOK 7 : PENGALAMAN MENJUAL SMARTPHONE (INTERVIEW PEMILIK TOKO)"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/lblQ101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok7_q101_text"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>
            <Spinner
                android:id="@+id/spQ101A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok7_q102_text"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>
            <CheckBox android:id="@+id/cbQ102ASamsung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_samsung_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <CheckBox android:id="@+id/cbQ102ASmartfren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_smartfren_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <CheckBox android:id="@+id/cbQ102AAdvan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_advan_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <CheckBox android:id="@+id/cbQ102ALenovo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_lenovo_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <CheckBox android:id="@+id/cbQ102AOppo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_oppo_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <CheckBox android:id="@+id/cbQ102AAsus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_checkbox_asus_text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/errorQ102A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:textColor="@color/colorError"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_step_button_layout" />
</RelativeLayout>
