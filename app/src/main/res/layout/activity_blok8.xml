<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".activities.Blok8Activity">
            <TextView
                android:id="@+id/lblQ121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q121_text"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spQ121A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/page_blok8_mall_list"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q122_text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/txtQ122A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q123_text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/txtQ123A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ124"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q122_text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/txtQ1224"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q122_text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/txtQ125A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ126"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q122_text"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/txtQ126A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/lblQ127"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/page_blok8_q127_text"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spQ127A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/page_blok8_tipetoko_list"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/bottom_step_button_layout" />
</LinearLayout>